<div class="dashboard-modules table index_table index">
  <div class="dashboard-module">
    <div class="module-body">
      <table border="0" cellspacing="0" cellpadding="0" class="index_table index">
        <thead>
          <tr>
            <th class="col">Contributor Payouts</th>
            <th class="col text-right">Amount</th>
          </tr>
        </thead>
        <tbody>
          <tr class="even">
            <td class="col">
              Balance
            </td>
            <td class="col text-right">
              <%= number_to_currency(aggregated_new_deal_balance[:balance]) %>
            </td>
          </tr>
          <tr class="odd">
            <td class="col">
              Unsettled
            </td>
            <td class="col text-right">
              <%= number_to_currency(aggregated_new_deal_balance[:unsettled]) %>
            </td>
          </tr>
          <tr class="even">
            <td class="col">
              <strong>TOTAL</strong>
            </td>
            <td class="col text-right">
              <%= number_to_currency(aggregated_new_deal_balance[:balance] + aggregated_new_deal_balance[:unsettled]) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="dashboard-module">
    <div class="module-body">
      <table border="0" cellspacing="0" cellpadding="0" class="index_table index" style="margin-bottom: 0px;">
        <thead>
          <tr>
            <th class="col">Account</th>
            <th class="col text-center">Classification</th>
            <th class="col text-right">Balance</th>
          </tr>
        </thead>
        <tbody>
          <% accounts.sort_by(&:classification).each_with_index do |account, idx| %>
            <tr class="<%= idx.even? ? "even" : "odd" %>">
              <td class="col text-left">
                <%= account.name %>
              </td>
              <td class="co text-center">
                <%= account.classification %>
              </td>
              <td class="col text-right">
                <% if account.classification == "Liability" %>
                  <%= number_to_currency(-1 * account.current_balance.abs) %>
                <% else %>
                  <%= number_to_currency(account.current_balance) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
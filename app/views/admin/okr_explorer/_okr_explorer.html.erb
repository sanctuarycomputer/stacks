          <td class="col">
            <%= total_sellable.round(2) %>
          </td>
          <td class="col">
            <%= total_non_sellable.round(2) %>
          </td>
          <td class="col">
            <%= total_time_off.round(2) %>
          </td>
          <td class="col">
            <%= total_non_billable.round(2) %>
          </td>
          <td class="col">
            <%= total_billable.round(2) %>
          </td>
          <td class="col">

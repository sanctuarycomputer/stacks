              <%= email %>
            </td>
            <td class="col">
              <%= d["sellable"].to_f.round(2) %>
            </td>
            <td class="col">
              <%= d["non_sellable"].to_f.round(2) %>
            </td>
            <td class="col">
              <%= d["time_off"].to_f.round(2) %>
            </td>
            <td class="col">
              <%= d["non_billable"].to_f.round(2) %>
            </td>
            <td class="col">
              <%= total_billable %>

        <% total_non_billable = period["utilization"].values.reduce(0){|acc, d| acc += d["non_billable"].to_f} %>
        <% total_billable = period["utilization"].values.reduce(0){|acc, d| acc += (d["billable"].values.map(&:to_f).reduce(&:+) || 0)} %>


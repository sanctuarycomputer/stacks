            <% target = (okr_results.dig("target").try(:to_f) || 0).round(2) %>
            <% health = okr_results.dig("health")  %>
            <% unit = okr_results.dig("unit") %>
            <% surplus = (okr_results.dig("surplus") || 0).to_f.round(2) %>
            <% hint = (okr_results.dig("hint") || "No hint given") %>


                <span class="split">
                  <% if unit == "usd" %>
                    <strong style="font-size: 15px"><%= number_to_currency(value.round(2)) %></strong> (target: <%= number_to_currency(target) %>)
                  <% elsif unit == "percentage" %>
                    <strong style="font-size: 15px"><%= value.round(2) %>%</strong> (target: <%= target.round(2) %>%)
                  <% else %>
                    <strong style="font-size: 15px"><%= value.round(2) %></strong> (target: <%= target.round(2) %>)
                  <% end %>
                </span>
              <% end %>
            </span>
          </td>
        </tr>
      </tbody>
    </table>
